
<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>后台管理页面</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <link href="/stylesheets/dashboard.css" rel="stylesheet">
     <style type="text/css">
       body{
        overflow-y:scroll; 
       }
       .row{
        margin-top: 15px;
       }
       .message{
        width: 600px;
        min-height: 300px;
        border-radius: 5px;
        outline: none;
        border-color: #ccc;
        resize: none;

       }
    </style>
  </head>

  <body>

    <% include header.ejs%>

    <div class="container-fluid">
      <div class="row">
         <% include nav.ejs%>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">消息中心</h1>
            <ul id="myTab" class="nav nav-tabs">
                <li class="active">
                    <a href="#all" data-toggle="tab">
                         消息群发
                    </a>
                </li>
                <li><a href="#private" data-toggle="tab">私发</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade in active" id="all">
                     <div class="row">
                        <form class="form-horizontal" role="form"  >
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        消息标题：
                                    </label>
                                    <div class="col-md-5">
                                        <input type="text" class="form-control" placeholder="请输入消息标题……"  id="titleAll" required >
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        内容：
                                    </label>
                                    <div class="col-md-5">
                                       <textarea  id="messageAll" class="message"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-5">
                                      <input class="btn btn-primary" type="button" id="sendAll" value="确定">
                                      <input class="btn btn-default" type="reset">
                                    </div>
                                </div>
                        </form>
                     </div>
                </div>
                <div class="tab-pane fade" id="private">
                   <div class="row">
                        <form class="form-horizontal" role="form"  >
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    接收者：
                                </label>
                                <div class="col-md-5">
                                    <select name="" id="receiver" class="selectpicker show-tick form-control">
                                       <% for(var i=0;i<user.length;i++){%>
                                        <option value="<%= user[i].userName%>"><%= user[i].userName%>(<%= user[i].nickName%>)</option>
                                        <% }%>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    消息标题：
                                </label>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" placeholder="请输入消息标题……"  id="titlePrivate" required >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">
                                    内容：
                                </label>
                                <div class="col-md-5">
                                   <textarea name="messagePrivate" id="messagePrivate" class="message"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-5">
                                  <input class="btn btn-primary" type="button" id="sendPrivate" value="确定">
                                  <input class="btn btn-default" type="reset">
                                </div>
                            </div>
                        </form>
                   </div>
                </div>
            </div>

        </div>
      </div>
    </div>

    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    
    <!--  消息发布-->
    <script>
        $(function(){
            $("ul#nav li").eq(7).attr('class','active');
        })

        
         function sendNews(data){
            $.ajax({
                 url:'/admin/message/',
                 type:'POST',
                 data:data,
                 success:function(data){
                    alert(data);
                }
           })
        }
                 
        
        $(function(){
            // 群发
            $('#sendAll').click(function(){
                sendNews({
                    act:'all',
                    news_title:$('#titleAll').val(),
                    news_con:$('#messageAll').val()
                })
            })   

            // 私发
            $('#sendPrivate').click(function(){
                sendNews({
                    act:'private',
                    news_title:$('#titlePrivate').val(),
                    news_con:$('#messagePrivate').val(),
                    receiver:$('#receiver').val()
                })
            })   
    
        })
    </script>
  </body>
</html>
