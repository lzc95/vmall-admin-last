
<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>后台管理页面</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <link href="/stylesheets/dashboard.css" rel="stylesheet">
     <style type="text/css">
       body{
        overflow-y:scroll; 
       }
    </style>
  </head>

  <body>

    <% include header.ejs%>

    <div class="container-fluid">
      <div class="row">
         <% include nav.ejs%>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">修改密码</h1>
            <div class="row">
                <form class="form-horizontal" role="form" name="adminForm" >
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            原密码：
                        </label>
                        <div class="col-md-5">
                            <input type="text" class="form-control" placeholder="请输入原密码……"  id="prePass" name="prePass" required >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            更改密码：
                        </label>
                        <div class="col-md-5">
                            <input type="password" class="form-control" placeholder="请输入修改密码……" id="psw" name="psw" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">
                            确认密码：
                        </label>
                        <div class="col-md-5">
                            <input type="password" class="form-control" placeholder="请再输入修改后的密码……"  id="pswAgain" name="pswAgain" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-5">
                          <input class="btn btn-primary" type="button" id="changePass" value="确定">
                          <input class="btn btn-default" type="reset">
                        </div>
                    </div>
                </form>
            </div>
        </div>
      </div>
    </div>

    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.js"></script>

    <script type="text/javascript">
        $(function(){
             var flag=false;
             // 查询原密码是否输入正确
             $('#prePass').blur(function(){
                 $.ajax({
                      url:'/admin/changePass',
                      type:'post',
                      data:{
                          act:'query',
                          password:$('#prePass').val()
                      },
                      success:function(data){
                           if(data.code==1){
                             changePass();
                           }
                           if(data.code==0){
                             alert(data.msg);
                             $('#prePass').val('')
                           }
                      }
                 })
            })
            
             // 提交修改的密码
             function changePass(){
                 $('#changePass').click(function(){
                      $.ajax({
                          url:'/admin/changePass',
                          type:'post',
                          data:{
                              act:'change',
                              password:$('#psw').val()
                          },
                          success:function(data){
                                alert(data.msg);
                                if(data.code==1){
                                    $('#prePass').val('');
                                    $('#psw').val('');
                                    $('#pswAgain').val('');
                                }
                            
                          }
                      })
                 })
             }    
        })

         $(function(){
            $("ul#nav li").eq(9).attr('class','active');
        })
    </script>
  </body>
</html>
